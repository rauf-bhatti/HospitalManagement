<Window x:Class="HospitalManagement.Views.PatientViews.PatientManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HospitalManagement.Views.PatientViews"
        mc:Ignorable="d"
        Title="PatientManagement" Height="600" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="9"
            Background="Navy">

            <Label 
                Content="Patient Management"
                FontFamily="Bahnschrift SemiBold SemiCondensed"
                FontSize="35"
                Foreground="White"
                Margin="130, 15, 0, 0"/>
        </Border>


        <Border
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Background="SlateGray"
            Grid.RowSpan="5">

            <StackPanel>

            </StackPanel>
        </Border>

        <ListView
            x:Name="listView_Main"
            Grid.Column="2"
            Grid.Row="1"
            Grid.ColumnSpan="7"
            Grid.RowSpan="5"
            FontFamily="Bahnschrift SemiBold SemiCondensed" 
            Background="FloralWhite">
            <ListView.View>
                <GridView 
                    AllowsColumnReorder="False">
                    <GridViewColumn Header = "ID Number" DisplayMemberBinding = "{Binding Name}" Width = "150"/>
                    <GridViewColumn Header = "First Name" DisplayMemberBinding = "{Binding Name}" Width = "150"/>
                    <GridViewColumn Header = "Last Name" DisplayMemberBinding = "{Binding Name}" Width = "150"/>
                    <GridViewColumn Header = "Age" DisplayMemberBinding = "{Binding Name}" Width = "150"/>
                    <GridViewColumn Header = "Address" DisplayMemberBinding = "{Binding Name2}" Width = "150"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
